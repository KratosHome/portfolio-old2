{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all",
        "printWidth": 80,
        "endOfLine": "auto",
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    ]
  }
}
